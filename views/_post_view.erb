<article class="post <%=@post.type%>-post" id="post-<%= @post.id %>">
  <div class="post-header">
    <div class="user">
      <a href="/blog/<%=@post.blog_id%>"><img class="usericon" src="https://api.tumblr.com/v2/blog/<%=@post.blog_id%>/avatar"/></a>
      <a href="/blog/<%=@post.blog_id%>" class="tumblr_blog"><%=@post.blog_name%></a>
    </div>
    <div><a href="<%=@post.url%>" class="timestamp"><%=@post.date%></a></div>
  </div>

  <% if !@post.title.blank? && @post.type!=:link %>
  <h2><a href="<%=@post.url%>"><%= @post.title %></a></h2>
  <% end %>

  <% if @post.imageset %>
  <div class="imageset">
    <% for row in @post.imageset.rows %>
    <div class="imageset-row">
      <% for img in row %><a href="<%=img.orig_size%>" title="<%=img.caption%>" target="_blank"><img src="<%=img.url(500)%>" alt="<%=img.alt%>"/></a><% end %>
    </div>
    <% end %>
  </div>
  <% elsif player=@post.media_player %>
  <div class="media-player"><%=player%></div>
  <% end %>

  <div class="text-body">
  <% if [:text,:photo,:audio,:video].include?(@post.type) %>
  <div class="text"><%= @post.body %></div>
  <% elsif @post.type==:answer %>
  <div class="question"><p><a href="<%=@post.answer[:asking_url]%>"><%=@post.answer[:asking_name]%></a> asked:</p> <%=@post.answer[:question]%></div>
  <div class="answer"><%=@post.answer[:answer]%></div>
  <% elsif @post.type==:link %>
  <p><a class="post-link" href="<%=@post.link[:url]%>"><%=@post.link[:title]%></a></p>
  <div class="excerpt"><%=@post.link[:excerpt]%></div>
  <div class="description"><%=@post.link[:description]%></div>
  <% elsif @post.type==:quote %>
  <div class="quote-text"><%=@post.quote[:text]%></div>
  <div class="quote-source">- <%=@post.quote[:source]%></div>
  <% elsif @post.type==:chat %>
  <div class="chat">
    <% for line in @post.dialogue %>
  <p><b><%=line[:name]%>:</b> <%=line[:phrase]%></p>
    <% end %>
  </div>
  <% end %>
  </div><!--/div.text-body-->

  <div class="post-footer">
    <div class="tags">
      <% for tag in @post.tags %>
      <span>#<a href="/tag/<%=tag%>"><%=tag%></a></span> 
      <% end %>
    </div>
    <div class="note-count"><a href="<%=@post.url%>"><%=@post.note_count%> notes</a></div>
  </div><!--/div.post-footer-->
</article>